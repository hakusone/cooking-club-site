{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "",
    "title": "Activity format base",
    "descriptions": "Activity format for import and export. By Sharon Wong",
    "type": "object",
    "properties": {
        "_id": {
            "type": "string"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40
        },
        "dates": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 3000
        }
    },
    "required": ["name", "dates", "description"],
    "additionalProperties": false
}
