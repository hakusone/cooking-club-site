{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "",
    "title": "Rental schema",
    "descriptions": "Rental schema for import and export. By Sharon Wong",
    "type": "object",
    "properties": {
        "_id": {
            "type": "string"
        },
        "renterInfo": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 40
              },
              "cell": {
                "minLength": 7,
                "maxLength": 13
              }
            },
            "required": ["name", "cell"]
        },
        "sails": {
          "type": "array",
          "minItems": 1,
          "items" :[
            {
              "type": "object",
              "properties": {
                "sailName": {
                  "type": "string",
                  "minLength": 5
                },
                "quantity": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 15
                }
              },
              "required": ["sailName", "quantity"]
            }
          ]
        }
    },
    "required": ["renterInfo", "sails"],
    "additionalProperties": false
}
